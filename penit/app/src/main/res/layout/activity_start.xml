<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:id="@+id/coord"
    android:layout_height="match_parent"

    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorBackground">


    <View
        android:layout_width="match_parent"
        android:layout_height="275dp"
        android:layout_alignParentTop="true"
        android:id="@+id/view_back"
        android:layout_centerHorizontal="true"
        android:background="@drawable/ic_wave"/>
    <View
        android:layout_width="match_parent"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true"
        android:layout_height="250dp"
        android:background="@drawable/ic_wave_1"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/opensansregular_semibold"

        android:textSize="24sp"
        android:text="@string/app_name"
        android:gravity="center"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:padding="5dp"
        android:textColor="@color/colorBackground"
        android:layout_marginTop="20dp"
        app:drawableStartCompat="@mipmap/ic_launcher_foreground" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/view_back"

        android:layout_centerVertical="true"
        android:layout_marginTop="-30dp"

        android:layout_marginBottom="10dp"
        android:fontFamily="@font/opensansregular_semibold"
        android:gravity="center_horizontal"
        android:padding="20dp"
        android:text="Pen-It is a simple notetaking app used to capture your ideas quickly and easily.\n\nYou may quickly capture what's on your mind by either typing , adding voice notes or even drawing simple ideas and diagrams.\n\n So Go ahead, Make your day simple and productive with Pen-It.\n\n   Cheers!"
        android:textColor="@color/colorText"
        android:textSize="16sp" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab_next"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="20dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:clickable="true"
        android:elevation="150dp"
        android:focusable="true"
        android:foregroundGravity="center"
        android:outlineAmbientShadowColor="#212121"
        app:backgroundTint="@color/colorButton"


        app:srcCompat="@drawable/ic_round_navigate_next_24"
        app:pressedTranslationZ="12dp"/>
    </RelativeLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>